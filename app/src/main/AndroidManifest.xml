<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ar.com.p39.marvel_universe">

    <uses-permission android:name="android.permission.INTERNET" />
    <!-- For espresso testing purposes, this is removed in live builds, but not in dev builds -->
    <!-- TODO: Ideally we should create an AndroidManifest in the debug flavor and move this to there -->
    <uses-permission android:name="android.permission.SET_ANIMATION_SCALE"
        tools:ignore="ProtectedPermissions" />

    <application
        android:name=".MarvelUniverseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MarvelUniverse">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
